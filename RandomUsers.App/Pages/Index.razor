@page "/"

<PageTitle>Index</PageTitle>

@if(Users == null)
{
    <p><em>Loading...</em></p>
}
else {
    <div class="row">
        @foreach(var user in Users)
        {
            <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3">
                <UserCard UserModel="user"></UserCard>
            </div>
        }
    </div>
}